<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <%= profile_img(user) %>
        <p><%= user.name %></p>
        <p><%= user.email %></p>
        <p><%= link_to '詳細', user_path(user) %></p>
        
        <% unless current_user.id == user.id %>
          <%= render 'follow_form', user: user %>
        <% end %>
      </div>
  <% end %>
</div>